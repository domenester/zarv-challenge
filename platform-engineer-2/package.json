{
  "name": "zarv-challenge-by-diogo-domene",
  "version": "1.0.0",
  "description": "Zarv Challenge",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --verbose --coverage --runInBand --forceExit",
    "build": "./node_modules/typescript/bin/tsc",
    "start": "npm run build && node ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domenester/zarv-challenge.git"
  },
  "keywords": [
    "zarv"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/domenester/zarv-challenge/issues"
  },
  "homepage": "https://github.com/domenester/zarv-challenge#readme",
  "dependencies": {
    "axios": "^1.5.1",
    "joi": "^17.10.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.7.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
